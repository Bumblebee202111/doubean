<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="smallRoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size_small</item>
    </style>

    <style name="normalRoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size_normal</item>
    </style>

    <style name="Widget.Doubean.AppbarLayout" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Doubean.AppBarLayout</item>
    </style>

    <style name="ThemeOverlay.Doubean.AppBarLayout" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/doubean_white</item>
    </style>

    <style name="ThemeOverlay.Doubean.MaterialButton" parent="">
        <item name="colorPrimary">@color/doubean_green</item>
    </style>

    <style name="Widget.Doubean.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Doubean.MaterialButton</item>
    </style>

    <style name="Widget.Doubean.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.Doubean.Button.OutlinedButton.IconOnly.MixedToggleGroupIcon" parent="Widget.Doubean.Button.OutlinedButton.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:minWidth">36dp</item>
    </style>

    <style name="Widget.Douban.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Doubean.Toolbar</item>
    </style>

    <style name="ThemeOverlay.Doubean.Toolbar" parent="">
        <item name="colorPrimary">@color/doubean_white</item>
    </style>

    <style name="Widget.Doubean.GroupToolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Doubean.GroupToolbar</item>
    </style>

    <style name="ThemeOverlay.Doubean.GroupToolbar" parent="">
        <item name="colorPrimary">@color/doubean_green</item>
        <item name="colorOnPrimary">@color/doubean_white</item>
    </style>

    <style name="Widget.Doubean.GroupCollapsingToolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Doubean.GroupCollapsingToolbar</item>
    </style>

    <style name="ThemeOverlay.Doubean.GroupCollapsingToolbar" parent="">
        <item name="colorOnPrimary">@color/doubean_white</item>
    </style>

    <style name="Widget.Doubean.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Doubean.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.Doubean.BottomNavigationView" parent="">
        <item name="colorOnPrimary">@color/doubean_green</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Widget.Doubean.Chip.Action" parent="Widget.MaterialComponents.Chip.Action"></style>


</resources>